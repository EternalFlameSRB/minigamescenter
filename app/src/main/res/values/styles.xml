<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="main_screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/bg_logo_big</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="splash_screen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/main_bg</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="page_background">
        <item name="android:background">@color/colorGray</item>
    </style>

    <style name="text_header">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_header</item>
    </style>

    <style name="text_large">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="text_regular">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/view_margin</item>
    </style>

    <style name="item_background">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="another_accent">
        <item name="colorAccent">@color/colorGray</item> <!-- Whatever color you want-->
    </style>

    <style name="radio_button_connect" parent="@android:style/Widget.CompoundButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="navigation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorGray</item>
        <item name="itemTextColor">@color/colorPrimary</item>
        <item name="itemBackground">@color/colorGray</item>
        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="android:selectableItemBackground">@color/colorPrimaryDark</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_large</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorGray</item>
        <item name="actionMenuTextColor">@color/colorGray</item>
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/colorGray</item>
        <item name="colorControlHighlight">@color/colorGray</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="popup_theater" parent="ThemeOverlay.AppCompat.Dark">
    </style>


</resources>
