<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:clipChildren="false">

    <include
        android:id="@+id/player_info"
        layout="@layout/game_connect_four_board_players_information" />

    <LinearLayout
        android:id="@+id/game_board"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"

        android:layout_below="@+id/player_info"
        android:clipChildren="false"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <include layout="@layout/game_connect_four_board_row" />

        <include layout="@layout/game_connect_four_board_row" />

        <include layout="@layout/game_connect_four_board_row" />

        <include layout="@layout/game_connect_four_board_row" />

        <include layout="@layout/game_connect_four_board_row" />

        <include layout="@layout/game_connect_four_board_row" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/game_board_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clipChildren="false"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <include layout="@layout/game_connect_four_front_board_row" />

        <include layout="@layout/game_connect_four_front_board_row" />

        <include layout="@layout/game_connect_four_front_board_row" />

        <include layout="@layout/game_connect_four_front_board_row" />

        <include layout="@layout/game_connect_four_front_board_row" />

        <include layout="@layout/game_connect_four_front_board_row" />
    </LinearLayout>
</RelativeLayout>

